@page "/admin"
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Admin Panel</PageTitle>

<div class="container mx-auto px-4 py-8">
	<h1 class="text-4xl font-bold text-gray-100 mb-8">Admin Panel</h1>

	<div class="bg-gray-700 rounded-lg p-6 mb-6">
		<h2 class="text-2xl font-semibold text-gray-100 mb-4">Admin Dashboard</h2>
		<p class="text-gray-300 mb-4">
			Welcome to the admin panel. Only users with the Admin role can access this page.
		</p>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			<div class="bg-gray-600 rounded p-4">
				<h3 class="text-lg font-semibold text-gray-100 mb-2">User Management</h3>
				<p class="text-gray-300 text-sm">Manage user accounts and permissions</p>
			</div>

			<div class="bg-gray-600 rounded p-4">
				<h3 class="text-lg font-semibold text-gray-100 mb-2">Content Management</h3>
				<p class="text-gray-300 text-sm">Manage articles and categories</p>
			</div>

			<div class="bg-gray-600 rounded p-4">
				<h3 class="text-lg font-semibold text-gray-100 mb-2">System Settings</h3>
				<p class="text-gray-300 text-sm">Configure application settings</p>
			</div>
		</div>
	</div>

	<div class="bg-yellow-600 bg-opacity-20 border border-yellow-600 rounded-lg p-4">
		<h3 class="text-lg font-semibold text-yellow-400 mb-2">⚠️ Admin Access Required</h3>
		<p class="text-yellow-300">
			This page demonstrates role-based authorization. Only users with the "Admin" role can view this content.
		</p>
	</div>
</div>