<header
	class="container flex items-center justify-between max-w-7xl px-6 py-2 mx-auto rounded-b-mdxl:max-w-5xl border-b border-blue-700 shadow-md shadow-blue-500 transition-colors duration-200">
	<a href="#" class="text-2xl">@_siteName</a>
	<div class="flex items-center gap-4">
		<ThemeToggle />
		<div class="hidden space-x-2 font-medium sm:block">
			<AuthorizeView>
				<Authorized>
					<a href="/profile">Hey
						@context.User.Identity?.Name!</a>
				</Authorized>
			</AuthorizeView>
			<AuthorizeView>
				<Authorized>
					<a href="/notes">Notes</a>
				</Authorized>
			</AuthorizeView>
			<a href="/articles">Articles</a>
			<AuthorizeView Roles="Admin">
				<a href="/categories">Categories</a>
			</AuthorizeView>
			<a href="/about">About</a>
			<a href="/contact">Contacts</a>
			<LoginComponent />
		</div>
	</div>
</header>

@code {

	private const string _siteName = "Article Site";

	[CascadingParameter] private Task<AuthenticationState>? AuthenticationState { get; set; }

}